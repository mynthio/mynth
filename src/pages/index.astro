---
import { MynthAppTile } from "../components/mynth-app-tile";
import { Spotlight } from "../components/ui/spotlight";
import Layout from "../layouts/Layout.astro";
---

<Layout title="Where design meets technology and AI">
  <main class="max-w-3xl mx-auto px-4">
    <header class="min-h-96 flex items-center justify-center">
      <Spotlight fill="white" className="-top-96 -left-32 lg:left-32" />
      <h1
        class="py-10 relative z-10 text-lg md:text-7xl bg-clip-text text-transparent bg-gradient-to-br from-neutral-200 to-neutral-600 text-center font-sans font-bold"
      >
        Where design meets technology and AI
      </h1>
    </header>

    <section>
      <h1 class="font-light text-3xl text-neutral-400">Meet our apps</h1>

      <div>
        <MynthAppTile
          client:load
          title="Persona"
          description="AI Personas - Create, share and chat"
          imageSrc="https://cdn.persona.mynth.io/logo.webp"
          href="https://persona.mynth.io"
        />
      </div>
    </section>
  </main>
</Layout>
